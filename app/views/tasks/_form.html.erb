<section>
  <%= form_for task do |f| %>
    <%= render 'shared/error', current_object: task %>
    <div>
      <p>
        <%= f.label :title %>
        <div><%= f.text_field :title %></div>
      </p>
      <p>
        <%= f.label :description %>
        <div><%= f.text_area :description %></div>
      </p>
      <% if request.path.include?('edit') %>
        <p>
          <%= f.label :completed %>
          <%= f.check_box :completed %>
        </p>
      <% end %>
      <p><%= f.submit %></p>
    </div>
  <% end %>

  <p><%= link_to 'Back to tasks page', tasks_path %></p>
</section>
